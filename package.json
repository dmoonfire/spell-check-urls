{
  "name": "spell-check-urls",
  "version": "0.5.0",
  "main": "./lib/main",
  "description": "A plugin to Atom's spell-check to mark URLs as valid words.",
  "repository": "https://github.com/dmoonfire/spell-check-urls",
  "license": "MIT",
  "engines": {
    "atom": "*"
  },
  "scripts": {
    "format": "prettier --write lib/*.js"
  },
  "dependencies": {
    "url-regex": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@semantic-release/apm": "^1.0.5",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "husky": "^3.0.4",
    "prettier": "^1.18.2",
    "semantic-release": "^17.2.3"
  },
  "providedServices": {
    "spell-check": {
      "versions": {
        "1.0.0": "provideSpellCheck"
      }
    }
  },
  "release": {
    "branch": "master",
    "message": "chore(release): v${nextRelease.version}\n\n${nextRelease.notes}",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/apm",
      "@semantic-release/git"
    ],
    "analyzeCommits": [
      "@semantic-release/commit-analyzer"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/apm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/apm"
    ],
    "success": [],
    "fail": []
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
